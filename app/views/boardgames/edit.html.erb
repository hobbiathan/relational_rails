
<%= form_with model: @boardgame, local: true, class: "update-boardgame"  do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "name" %>
  <%= f.label :rank %>
  <%= f.text_field :rank, class: "rank" %>
  <%= f.label :out_of_print, class: "sold" %>
  <%= f.select :out_of_print, options_for_select([true,false]) %>

  <%= f.submit "Submit Update" %>


<% end %>
